{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "importHelpers": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "lib": ["dom", "dom.iterable", "es6", "es2017"],
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "noStrictGenericChecks": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "noEmit": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "mock/**/*",
        "config/**/*",
        ".umirc.ts",
        "typings.d.ts",
        "*.js",
        "*.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "es",
        "dist",
        "typings",
        "**/__test__",
        "test",
        "tests",
        "docs"
    ]
}
